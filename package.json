{
  "name": "openapi-merger",
  "version": "0.5.4",
  "main": "index.js",
  "bin": {
    "openapi-merger": "bin/openapi-merger.js"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "cd test && nyc --reporter=html mocha *.js",
    "lint": "eslint --fix src/**/*.js test/**/*.js",
    "format": "prettier --write src/**/*.js test/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": "npm run format"
  },
  "repository": "https://github.com/kota65535/openapi-merger",
  "keywords": [
    "openapi",
    "swagger",
    "merge",
    "merger"
  ],
  "author": "kota65535 <kota65535@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "5.1.0",
    "deepmerge": "4.2.2",
    "fs-extra": "9.0.1",
    "glob": "7.1.6",
    "js-yaml": "3.14.0",
    "lodash": "4.17.21",
    "mktemp": "1.0.0",
    "node-fetch": "2.6.7"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.0.0",
    "husky": "8.0.3",
    "lint-staged": "10.2.11",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "prettier": "2.0.5"
  }
}
